---
import "../styles/global.css";

interface Props {
  text: string;
  image: string;
  href: string;
  header: string;
}

const { text, image = "/bouclier2png.png", href, header } = Astro.props;
---

<div class="flex flex-col w-[30%] mx-auto" id="wrapper">
  <a href={href}>
    <div class="flex justify-center items-center h-[30%]">
      <img src={image} class="object-contain w-[30%]" />
    </div>
  </a>
  <a href={href} class="font-bold text-3xl text-center mt-4 underline"
    >{header}</a
  >
  <p class="mt-1 text-base text-center">{text}</p>
</div>

<style>
  @media screen and (max-width: 600px) {
    div {
      width: 50vw;
    }
    #wrapper {
      margin-bottom: 20px;
    }
    div > a > div {
      width: 100%;
      height: 100%;
    }
  }
  @media screen and (min-width: 600px) {
    div {
      width: 30%;
    }
    div > a > div {
      width: 100%;
      height: 100%;
    }
  }

