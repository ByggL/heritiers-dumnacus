---
import "../styles/global.css";

interface Props {
    text: string;
    image: string;
}

const { text, image = "/bouclier2png.png" } = Astro.props;
---

<div class="flex flex-col justify-between margin">
    <div class="w-full h-full">
        <img src={image} class="h-full w-full object-cover rounded-2xl" />
    </div>

    <p class="margin mt-4 text-base font-bold">{text}</p>
</div>

<style>
    @media screen and (max-width: 600px) {
        div {
            width: 50vw;
        }

        div > div {
            width: 100%;
            height: 100%;
        }
    }

    @media screen and (min-width: 600px) {
        div {
            width: 23%;
        }

        div > div {
            width: 100%;
            height: 100%;
        }
    }

    img {
        transition: transform 0.15s ease-in-out;
    }

    img:hover {
        transform: scale(1.05);
    }
</style>
