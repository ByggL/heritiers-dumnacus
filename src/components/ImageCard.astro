---
import "../styles/global.css";

interface Props {
  text: string;
  image: string;
}

const { text, image = "/bouclier2png.png" } = Astro.props;
---

<div class="flex flex-col w-[23%] justify-between margin">
  <div class="w-full h-full">
    <img src={image} class="h-full w-full object-cover" />
  </div>

  <p class="margin mt-1 text-base font-bold">{text}</p>
</div>
