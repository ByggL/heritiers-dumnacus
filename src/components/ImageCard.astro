---
import "../styles/global.css";

interface Props {
  text: string;
  image: string;
}

const { text, image = "/bouclier2png.png" } = Astro.props;
---

<div
  class="flex flex-col justify-between margin"
  itemscope
  itemprop="https://schema.org/Game"
>
  <div class="w-full h-full" itemprop="image">
    <img src={image} class="h-full w-full object-cover rounded-2xl" />
  </div>

  <p class="margin mt-4 font-richard text-xl font-bold" itemprop="name">
    {text}
  </p>
</div>

<style>
  @media screen and (max-width: 600px) {
    div {
      width: 50vw;
    }

    div > div {
      width: 100%;
      height: 100%;
    }
  }

  @media screen and (min-width: 600px) {
    div {
      width: 23%;
    }

    div > div {
      width: 100%;
      height: 100%;
    }
  }

  img {
    transition: transform 0.15s ease-in-out;
    -webkit-box-shadow: 5px 5px 15px 5px rgba(0, 0, 0, 0.4);
    box-shadow: 5px 5px 15px 5px rgba(0, 0, 0, 0.4);
  }

  img:hover {
    transform: scale(1.05);
  }
</style>
