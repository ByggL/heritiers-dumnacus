---
import '../styles/global.css';

interface Props {
	text: string;
	image: string;
}

const { text, image = '/bouclier2png.png' } = Astro.props;
---

<div class="flex flex-col w-[15%]">
    <div class="h-[15%]">
        <img src={image} class="object-contain"/>
    </div>
    <p class="margin mt-1">{text}</p>
</div>